.modal.fade#share-options{"aria-labelledby" => "#{ticket.id}label", :role => "dialog", :tabindex => "-1", class: "call-dialog-#{ticket.id}", data: {backdrop: 'static', keyboard: 'false'}}
  .modal-dialog.modal-sm{:role => "document"}
    .modal-content{style: 'min-height: 357px;'}
      .modal-header
        %strong Callback Request
      .modal-body.text-center
        %img{src: '/calling-icon.gif', style: 'width: 140px;margin-bottom: -19px;margin-top: -9px;'}
        %p= ticket.customer_name
        %p= ticket.customer_phone
        %p
          %strong= ticket.category || "Technicall Support"
        %br
        %button.btn.btn-success.btn-lg.accept.call-btn{type: 'button', data: {'disable-with'=>'Hanging up ..'}} Accept
        %button.btn.btn-danger.btn-lg.call-btn{type: 'button', disabled: false, "data-dismiss" => "modal", :type => "button", data: {'disable-with'=>'Hanging up ..'}} Hangup